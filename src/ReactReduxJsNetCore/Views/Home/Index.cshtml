@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Example ReactJs and Redux Application</h1>
    <div id="content"></div>
</div>

@section Scripts {
    <environment names="Development">
        <script src="~/js/vendor.js"></script>
        <script type="text/javascript">
                self._babelPolyfill = false; //HACK: see http://stackoverflow.com/a/36672020/1434764
        </script>
        <script src="~/js/main.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/vendor.min.js" asp-append-version="true"></script>
        <script type="text/javascript">
                self._babelPolyfill = false; //HACK: see http://stackoverflow.com/a/36672020/1434764
        </script>
        <script src="~/js/main.min.js" asp-append-version="true"></script>
    </environment>
}